@model IEnumerable<Protoshop.Models.Product>

@{
    ViewBag.Title = "Produkter";
}

<h2>Produkter</h2>

@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
@using (Html.BeginForm("Index", "Products", FormMethod.Get))
{
    <input type="text" id="search" name="search" placeholder="Sök..." />
    <input type="submit" value="sök" class="hidden" />
}
<div class="products">
    @foreach (var item in Model)
    {
        
        <a href="@Url.Action("Details", "Products", new { id = item.ID })" class="product">
            <img src="@Url.Content("~/Content/Images/tshirt.jpg")" alt="T-Shirt" class="image-responsive" />
            <h2>@item.Name</h2>
            <p>
                <span class="price">@item.Price kr</span>
                <span class="btn btn-success buy">
                    <span class="glyphicon glyphicon-shopping-cart"></span>
                    Köp
                </span> 
            </p>
            <p class="desc">@item.Description</p>
            <p><span class="btn btn-success">Köp</span></p>
        </a>
        }
</div>